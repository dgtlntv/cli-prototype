{
    "$schema": "./commands-schema.json",
    "welcome": "Welcome to the Enhanced CLI Prototype!\nType 'help' to get a list of all available commands.\n",
    "variables": {
        "test": "test"
    },
    "commands": {
        "hello <name> [day]": {
            "describe": "Prints a greeting",
            "alias": ["hi", "wassup"],
            "example": [
                "hello max monday --uppercase",
                "Will print a hello message in all uppercase to max on a monday."
            ],
            "positional": {
                "name": {
                    "describe": "The name to give a greeting to.",
                    "type": "string",
                    "default": "Max"
                },
                "day": {
                    "describe": "The day of the week to give a greeting on.",
                    "type": "string",
                    "choices": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]
                }
            },
            "options": {
                "uppercase": {
                    "alias": "u",
                    "demandOption": true,
                    "describe": "Print everything in uppercase.",
                    "type": "boolean",
                    "default": "false"
                }
            },
            "handler": [
                {
                    "component": "progressBar",
                    "output": "Processing a huge amount of data",
                    "duration": 5000
                },
                {
                    "component": "conditional",
                    "output": {
                        "if": "uppercase === true",
                        "then": {
                            "component": "text",
                            "output": "hello world"
                        },
                        "else": {
                            "component": "text",
                            "output": "hi mom"
                        }
                    }
                }
            ]
        }
    }
}
