{
    "$schema": "./commands-schema.json",
    "welcome": "Welcome to the Enhanced CLI Prototype!\nType 'help' to get a list of all available commands.\n",
    "variables": {
        "test": "123"
    },
    "commands": {
        "hello [day]": {
            "describe": "Prints a greeting",
            "alias": ["hi", "wassup"],
            "example": [
                "hello max monday --uppercase",
                "Will print a hello message in all uppercase to max on a monday."
            ],
            "positional": {
                "day": {
                    "describe": "The day of the week to give a greeting on.",
                    "type": "string",
                    "choices": [
                        "monday",
                        "tuesday",
                        "wednesday",
                        "thursday",
                        "friday",
                        "saturday",
                        "sunday"
                    ]
                }
            },
            "options": {
                "uppercase": {
                    "alias": "u",
                    "demandOption": true,
                    "describe": "Print everything in uppercase.",
                    "type": "boolean",
                    "default": "false"
                }
            },
            "handler": [
                {
                    "component": "form",
                    "message": "Bruh moment",
                    "name": "flavor",
                    "choices": [
                        { "name": "bruh", "message": "moment" },
                        { "name": "123", "message": "123" }
                    ]
                },
                {
                    "component": "text",
                    "output": "{{flavor.bruh}} is my fav flavor i also like {{test}}"
                },
                {
                    "component": "conditional",
                    "output": {
                        "if": "flavor.bruh === 'topkek'",
                        "then": {
                            "component": "text",
                            "output": "It was topkek xDD"
                        }
                    }
                }
            ]
        }
    }
}
